{
  "compilerOptions": {
    // Should keep es5 and for older browser support
    "target": "es5", // vite default: "ES2020", - ES5 better for older browser support
    "module": "ESnext", 
    "lib": ["dom", "dom.iterable", "esnext"], // vite default: ["ES2020", "DOM", "DOM.Iterable"] -- Esnext better for older broswer support
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // vite default: "bundler" 
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /* Items in vite default but not CRA */
    // "noUncheckedSideEffectImports": true, // not in CRA
    // "noUnusedLocals": true, // not in CRA - Error on local variables that are never read
    // "noUnusedParameters": true, // not in CRA - Error on function params that are never used
    // "moduleDetection": "force", // not in CRA 
    // "allowImportingTsExtensions": true, // not in CRA - permit import "./file.ts" style paths â€” allows imports using .ts extensions, which mirrors native ESM resolution during dev in Vite.
    // "useDefineForClassFields": true, // not in CRA

    /* In CRA tsconfig but not in default */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "resolveJsonModule": true,
  },
  "include": ["src"]
}
